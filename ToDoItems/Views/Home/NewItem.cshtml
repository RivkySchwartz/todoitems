@model CategoryViewModel

<div class="container">
    <div style="height: 70vh;" class="row justify-content-center align-items-center">
        <div class="col-md-6 bg-light rounded-3 p-5">
            <h1>Add new item</h1>
            <form method="post" action="/home/savenewitem">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input id="title" type="text" class="form-control form-control-lg" placeholder="Title" name="title" />
                </div>
                <div class="form-group mt-3">
                    <label for="date">Due Date:</label>
                    <input id="date" type="date" class="form-control form-control-lg" placeholder="Due Date" name="dueDate" />
                </div>
                <div class="form-group mt-3">
                    <label for="categoryid">Category:</label>
                    <select id="categoryid" class="form-select" name="categoryid">
                        @foreach (Category c in Model.Categories)
                        {
                            <option value="@c.Id">@c.CategoryName</option>
                        }
                    </select>
                </div>
                <div class="d-grid gap-2 mt-3">
                    <button class="btn btn-primary">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>