@model ItemViewModel
<div b-gla70z2p0w class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="table table-hover table-striped table-bordered">
                <tr>
                    <th>Title</th>
                    <th>Category Name</th>
                    <th>Due Date</th>
                    <th>Completed Date</th>
                </tr>
                @foreach (ToDoItem item in Model.Items)
                {
                    if (item.CompletedDate.HasValue)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.CategoryName</td>
                            <td>@item.DueDate.ToShortDateString()</td>
                            <td>@item.CompletedDate.Value.ToShortDateString()</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.CategoryName</td>
                            <td>@item.DueDate.ToShortDateString()</td>
                            <td>Not Completed</td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>